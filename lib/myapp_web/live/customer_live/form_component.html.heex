<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="customer-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">
  
    <%= label f, :name %>
    <%= text_input f, :name %>
    <%= error_tag f, :name %>
  
    <%= label f, :email_address %>
    <%= text_input f, :email_address %>
    <%= error_tag f, :email_address %>
  
    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>

    <button class="button" phx-click="click">Send click event</button>
  </.form>
</div>
